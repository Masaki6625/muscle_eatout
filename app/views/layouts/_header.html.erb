<header class="sticky-top border-bottom">
  <nave class="navbar navbar-expand-lg bg-white">
    <div class="container-md">
      <%= link_to root_path do %>
      <h1 class="text-center text-dark mt-3" style="font-family: 'Sacrament', cursive;">Musle Eatout</h1>
      <%end%>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto"></ul>
        <!--会員がログインしているとき-->
        <% if user_signed_in? %>
        <li class="list-unstyled text-dark mr-1">
          <%= link_to user_path(current_user), class: 'btn bg-link btn-sm' do %>
          <i class="fas fa-user-clock"></i>My page
          <%end%>
        </li>
        <li class="list-unstyled text-dark mr-1">
          <%= link_to restaurants_path, class: 'btn bg-link btn-sm' do %>
          <i class="fas fa-store"></i>レストラン一覧
          <%end%>
        </li>
        <li class="list-unstyled text-dark mr-1">
          <%= link_to users_path, class:'btn bg-link btn-sm' do %>
            <i class="fas fa-users"></i>会員一覧
          <%end%>
        </li>
        <li class="list-unstyled text-dark mr-1">
          <%= link_to new_restaurant_path, class: 'btn bg-link btn-sm' do %>
          <i class="fas fa-plus-circle"></i>新規投稿
          <%end%>
        </li>
        <li class="list-unstyled text-dark mr-1">
          <%= link_to destroy_user_session_path, method: :delete, class: 'btn bg-link btn-sm' do %>
          <i class="fas fa-sign-out-alt"></i>Logout
          <%end%>
        </li>

        <!--管理者がログインしているとき-->
        <% elsif admin_signed_in?%>
        <div class="mt-2 mr-2">
          <strong>管理者ページ</strong>
        </div>
        <li class="list-unstyled text-dark mr-1">
          <%= link_to admin_restaurants_path, class: 'btn bg-link btn-sm' do %>
          <i class="fas fa-store"></i>レストラン一覧
          <%end%>
        </li>
        <li class="list-unstyled text-dark mr-1">
          <%= link_to admin_users_path, class: 'btn bg-link btn-sm' do %>
          <i class="fas fa-users"></i>会員一覧
          <%end%>
        </li>
        <li class="list-unstyled text-dark mr-1">
          <%= link_to destroy_admin_session_path, method: :delete,class: 'btn bg-link btn-sm' do %>
          <i class="fas fa-sign-out-alt"></i>Logout
          <%end%>
        </li>

        <!--ゲストがログインしているとき-->
        <% else %>
        <div class="mr-5 mt-2">
        </div>
        <li class="list-unstyled text-dark mr-1">
          <%= link_to root_path, class:'btn bg-link btn-sm' do %>
          <i class="fas fa-hamburger"></i>Top
          <%end%>
        </li>
        <li class="list-unstyled text-dark mr-1">
          <%= link_to about_path, class:'btn bg-lonk btn-sm' do %>
          <i class="fas fa-utensils"></i>About
          <%end%>
        </li>
        <li class="list-unstyled text-dark mr-1">
          <%= link_to new_user_registration_path, class:'btn bg-link btn-sm' do %>
          <i class="fas fa-user-plus"></i>Sign up
          <%end%>
        </li>
        <li class="list-unstyled text-dark" >
          <%= link_to new_user_session_path, class:'btn bg-link btn-sm' do %>
          <i class="fas fa-sign-in-alt"></i>Log in
          <%end%>
        </li>
        <%end%>
        </ul>
      </div>
    </div>
  </nave>
</header>