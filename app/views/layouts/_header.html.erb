              <%= link_to user_path(current_user), class: 'nav-link text-dark' do %>
                <i class="fas fa-user-clock"></i> My page
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to restaurants_path, class: 'nav-link text-dark' do %>
                <i class="fas fa-store"></i> レストラン一覧
              <% end %>
