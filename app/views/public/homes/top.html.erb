<div class="container-fluid mt-4 mb-5">

  <div class="position-relative w-100 h-100 mb-5">
      <%= image_tag 'saladbar.jpg', class: 'd-block mx-auto', style: 'width: 95%; height: 300px; object-fit: cover;' %>
      <div class="position-absolute d-flex flex-column justify-content-center align-items-center w-100 h-100" style="top: 0; left: 0; background-color: rgba(255, 255, 255, .5)">
        <h2 style="font-size: calc(20px + 3.5vw);" style="font-family: 'Sacrament', cursive;">Muscle Eatout</h2>
        <p class="text-center" style="font-size: calc(12px + 1.1vw);">
          食べるを楽しく<br>
          もっと自分らしく
        </p>
      </div>
  </div>

  <div class="btn-wrapper col-6 mx-auto">
    <div class="row">
      <%= link_to"Sign up", new_user_registration_path, class:"btn btn-success btn-sm btn-block mb-3 sign_up" %>
    </div>
    <div class="row">
      <%= link_to "Log in", new_user_session_path , class:"btn btn-info btn-sm btn-block sign_in" %>
    </div>
    <div class="row">
      <%= link_to 'ゲストログイン', guest_user_path, method: :post, class: "btn btn-secondary btn-sm btn-black mb-3 sign_in" %> 
    </div>
  </div>
</div>