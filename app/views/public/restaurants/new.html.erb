<div>
  <div class="col-md-4 offset-md-4">
    <h1 class="text-center mt-5">レストラン投稿フォーム</h1>

    <%= form_with model: @restaurant do |f| %>
    <div class="form_group pt-4 pb-3 ml-5">
      <label>画像:</label>
        <%= f.file_field :image, accept: "image/*" %>
    </div>

    <div class="form_group pt-4 pb-3 ml-5">
      <label>店名:</label>
        <%= f.text_field :shop_name %>
    </div>

    <div class="form_group pt-4 pb-3 ml-3">
      <label>お店紹介:</label>
        <%= f.text_area :introduction %>
    </div>

    <div class=="form_group pt-4 ml-5">
      <label>タグ:</label>
      <%= f.text_field :name %>
    </div>
    <div class="d-flex">
    <%= f.label :star,'評価 ', class:'col-md-4 col-form-label' %>
    <div class="ml-2 p-2" id="star">
　　</div>
　　</div>
    <script>;
      let elem = document.querySelector('#star');
      elem.innerHTML = ""
      let opt = {
          starOn: "<%= asset_path('star-on.png') %>",
          starOff: "<%= asset_path('star-off.png') %>",
          starHalf: "<%= asset_path('star-half.png') %>",
          scoreName: 'restraunt[star]',
          //score: <%#= restraunt.star %>,
          //readOnly: true
      };
      raty(elem, opt);
    </script>

    <div class="form-group">
      <%= f.label :address, '場所' %>
      <%= f.text_field :address, class: 'form-control' %>
    </div>

    <div class="text-center mb-5">
    <%= f.submit '投稿する', class: "btn btn-success btn-lg" %>

    </div>
    <%end%>
  </div>
</div>