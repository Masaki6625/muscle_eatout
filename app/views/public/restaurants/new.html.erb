<h1>レストラン投稿フォーム</h1>

<%= form_with model: @restaurant do |f| %>
  <h4>画像</h4>
    <%= f.file_field :image, accept: "image/*" %>
  
  <h4>店名</h4>
    <%= f.text_field :shop_name %>
  
  <h4>お店紹介</h4>
    <%= f.text_area :introduction %>
  <%= f.submit '投稿する', class: "btn btn-success btn-lg" %>
<%end%>
  
