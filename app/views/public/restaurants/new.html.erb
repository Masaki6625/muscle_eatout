<div>
  <div class="container mt-5 mb-5">
    <div class="row">
      <div class="col-md-4 offset-md-4">
        <div class="card w-55 mx-auto mt-4 shadow-lg">
          <h3 class="text-center border-bottom mt-4 pb-4">レストラン投稿フォーム</h3>

            <%= form_with model: @restaurant do |f| %>
              <div class="d-flex pl-4 pb-3 pt-4">
                <span class="mr-2">
                  <i class="fas fa-camera-retro"></i>
                </span>
                  <%= f.file_field :image, accept: "image/*" %>
              </div>

              <div class="input-group-prepend pt-2 pl-4">
                <span class="mr-2">
                  <i class="fas fa-store"></i>
                </span>
                  <%= f.text_field :shop_name, placeholder: "お店の名前" %>
              </div>

              <div class="input-group-prepend pt-4 pl-4">
                <span class="mr-2">
                  <i class="fas fa-comment-alt"></i>
                </span>
                  <%= f.text_area :introduction, placeholder: "お店の紹介" %>
              </div>

              <div class="input-group-prepend pt-4 pl-4">
                <span class="mr-2">
                  <i class="fas fa-tag"></i>
                </span>
                  <%= f.text_field :name, placeholder: "タグ（半角,で区切る）" %>
              </div>

              <div class="d-flex pt-4 pl-4">
               <span class="mr-2">
                 <i class="fas fa-star"></i>
               </span>
                  <div class="ml-2 p-2" id="star">
                  </div>
              </div>
                <script>
                    document.querySelector('#star').innerHTML = '';
                    raty(document.querySelector('#star'), {
                    starOn: "<%= asset_path('star-on.png') %>",
                    starOff: "<%= asset_path('star-off.png') %>",
                    starHalf: "<%= asset_path('star-half.png') %>",
                    scoreName: 'restaurant[star]',
                  });
                </script>

              <div class="d-flex pt-4 pl-4">
                <span class="mr-2">
                  <i class="fas fa-map-marked-alt"></i>
                </span>
                  <%= f.text_field :address, placeholder: "住所を入力してください。", class: 'form-control' %>
              </div>

              <div class="text-center mt-4 mb-5">
              <%= f.submit '投稿する', class: "btn btn-success btn-lg" %>
              </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>