<div>
  <%= flash[:notice] %>
</div>

<div class="container mt-5 mt-5">
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-2 mr-4">
      <h2>新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="row">
        <div class="col-4 offset-md-1"><%= f.label :name, "名前" %></div>
        <div class="col-3"><%= f.text_field :name, autofocus: true,  placheholder: "名前" %></div>
      </div>

      <div class="row">
        <div class="col-4 offset-md-1"><%= f.label :email %></div>
        <div class="col-3"><%= f.email_field :email, required: true, placheholder: "メールアドレス" %></div>
      </div>

      <div class="row">
        <div class="col-4 offset-md-1">
        <% if @minimum_password_length %>
        <%= f.label "パスワード(#{@minimum_password_length}文字以上)" %>
        <% end %>
      </div>
      <div class="col-3"><%= f.password_field :password, required: true, placheholder: "パスワード" %></div>
      </div>

      <div class="row">
        <div class="col-4 offset-md-1"><p>パスワード（確認用）</p></div>
        <div class="col-3"><%= f.password_field :password_confirmation, required: true, placheholder: "再度パスワード" %></div>
      </div>

      <div class="row">
        <div class="col-4 offset-md-1 mt-3 mb-5">
        <%= f.submit "新規登録", class: "btn btn-success btn-lg"%>
        </div>
      </div>
      <% end %>
      <div class="row">
        <div class="col-md-12 text-center">
          <h3>既に登録済みの方は</h3>
          <p><%= render "public/shared/links" %>からログインしてください。</p>
        </div>
      </div>
    </div>
  </div>
</div>
