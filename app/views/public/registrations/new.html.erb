<div>
  <%= flash[:notice] %>
</div>

<div class="container mt-5">
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row my-3 justify-content-center">
    <div class="card mx-auto shadow-lg">
      <div class="card-body">
        <h2 class="card-title text-center border-bottom pt-5 pb-3">新規登録</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <div class="row">
              <div class="col-4"><%= f.label :name, "名前" %></div>
              <div class="col-8"><%= f.text_field :name, required: true, autofocus: true, placeholder: "名前", class: "form-control" %></div>
            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-4"><%= f.label :user_introduction, "自己紹介" %></div>
              <div class="col-8"><%= f.text_field :user_introduction, required: true, placeholder: "自己紹介を入力してください。", class: "form-control" %></div>
            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-4"><%= f.label :email %></div>
              <div class="col-8"><%= f.email_field :email, required: true, placeholder: "メールアドレス", class: "form-control" %></div>
            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-4">
                <% if @minimum_password_length %>
                  <%= f.label "パスワード(#{@minimum_password_length}文字以上)" %>
                <% end %>
              </div>
              <div class="col-8"><%= f.password_field :password, required: true, placeholder: "パスワード", class: "form-control" %></div>
            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-4"><p>パスワード（確認用）</p></div>
              <div class="col-8"><%= f.password_field :password_confirmation, required: true, placeholder: "再度パスワード", class: "form-control" %></div>
            </div>
          </div>

          <div class="form-group">
            <div class="row justify-content-center mt-3 mb-5">
              <div class="col-8">
                <%= f.submit "新規登録", class: "btn btn-success btn-lg btn-block" %>
              </div>
            </div>
          </div>
        <% end %>

        <div class="row">
          <div class="col-md-12 text-center">
            <h3>既に登録済みの方は</h3>
            <p><%= render "public/shared/links" %>からログインしてください。</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
