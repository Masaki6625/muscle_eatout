<% notifications = @notifications.where.not(visitor_id: current_user.id) %>
<% if notifications.exists? %>
<div class="container mb-5">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-8">
      <div class="card w-55 mx-auto mt-4 shadow-lg" style="border-radius: 15px;">
        <div class="card-header">
          <div>
            <span>
            <h1>通知一覧</h1>
            <%= link_to '通知を全て削除', destroy_all_path, method: :delete, class: 'btn btn-danger btn-sm',"data-confirm" => "実行すると通知が全て削除されてしまいます。本当に削除しますか？"  %>
            </span>
          </div>
        </div>
        <%= render partial: 'public/notifications/notification', collection: notifications %>
      </div>
    </div>
  </div>
</div>
<%= paginate notifications %>
<% else %>
  <p class="text-center">
    通知はありません
  </p>
<% end %>
