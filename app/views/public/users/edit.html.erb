<div class="container">
  <% if @user.errors.any? %>
    <%= @user.errors.count %>件のエラーが発生しました
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="card w-55 mx-auto mt-4 mb-4 shadow-lg">
        <h3 class="text-center border-bottom pt-5 pb-3">プロフィール変更</h3>

        <%= form_with model: @user do |f| %>
          <div class="d-flex pl-4 pb-3 pt-4">
            <span class="mr-2">
              <i class="fas fa-camera-retro"></i>
            </span>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>

          <div class="d-flex pl-4 pb-3 pt-4">
            <span class="mr-2">
              <i class="fas fa-user"></i>
            </span>
            <%= f.text_field :name, required: true, autofocus: true, id:"inputName", placeholder:"名前" %>
          </div>

          <div class="d-flex pl-4 pb-3 pt-4">
            <span class="mr-2">
              <i class="fas fa-comment"></i>
            </span>
            <%= f.text_area :user_introduction, id:"inputIntroduction", placeholder:"自己紹介" %>
          </div>

          <div class="container my-4">
            <div class="row d-flex justify-content-center">
              <div class="mr-4">
                <%= f.submit "プロフィールを変更", class: "btn btn-success btn-md" %>
              </div>
              <div>
                <%= link_to "退会する", withdraw_path(current_user), class: "btn btn-danger btn-md" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center m-3">
  <div class="mr-1">
    <%= link_to "レストラン一覧", restaurants_path, class: "btn btn-success btn-sm" %>
  </div>
  <div class="ml-3">
    <%= link_to "会員一覧", users_path, class: "btn btn-primary btn-sm" %>
  </div>
  <div class="ml-4">
    <%= link_to "会員詳細", user_path(@user.id), class: "btn btn-dark btn-sm" %>
  </div>
</div>