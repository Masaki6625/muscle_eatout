<div>
  <div class="col-md-4 offset-md-4">
    <h1 class="text-center pt-5">プロフィール変更</h1>
          
    <%= form_with model: @user do |f| %>
      <div class="form_group pt-4 pb-3 ml-5">
        <label for="inputImage">画像</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class="form_group pt-4 pb-3 ml-5">
        <label for="inputName">名前</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
      </div>
      <div class="form_group pt-4 pb-3 ml-3">
        <label for="inputIntroduction">自己紹介</label>
          <%= f.text_area :user_introduction, id:"inputIntroduction", placeholder:"自己紹介" %>
      </div>
    </div>
  </div>
  <div class="container text-center">
    <div class="row">
      <div class="col-lg-6 mt-2 mb-5">
        <%= f.submit "プロフィールを変更", class: "btn btn-success btn-lg" %>
      </div>
      <div class="col-lg-4 mt-3 mb-5">
        <%= link_to "退会する", withdraw_path(current_user), class: "btn btn-danger btn-lg" %>
      </div>
        <%end%>
    </div>
  </div>
