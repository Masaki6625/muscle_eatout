<div>
  <div class="col-md-4 offset-md-4">
    <h1 class="text-center pt-5">プロフィール変更</h1>

<%= form_with model: @user do |f| %>
 <div class="form_group pt-4 pb-3 ml-5">
<label for="inputImage">画像</label>
<%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
</div>
 <div class="form_group pt-4 pb-3 ml-5">
<label for="inputName">名前</label>
<%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
</div>
 <div class="form_group pt-4 pb-3 ml-3">
<label for="inputIntroduction">自己紹介</label>
<%= f.text_area :user_introduction, id:"inputIntroduction", placeholder:"自己紹介" %>
</div>
<div class="text-center mb-5">
<%= f.submit "プロフィールを変更", class: "btn btn-success btn-lg" %>
</div>
<%end%>
</div>
</div>
