<div class="userindex vh-100 d-flex align-items-center" id="restaurant.index">
  <div class="container">
    <div class="row">
      <div class="col-lg-7 mx-auto text-center">
        <h1 class="text-white">ユーザー 一覧</h1>
      </div>
    </div>
  </div>
</div>

<div class= "container px-5 px-sm-0">
  <div class='row'>
    <div class="col-md-3">
      <%= render 'public/users/userinfo', user: @user %>
      <%#= render 'public/restaurants/favoritesindex', collection: @favorite_restaurants %>
    </div>
    <div class="col-md-9 mt-4">
      <div class= "row">
        <% @users.each do |user| %>
          <div class="col-sm-6 col-md-4 mb-4">
            <div class="card mt-4 shadow-lg">
              <%= link_to user_path(user.id) do %>
                <%= image_tag user.get_profile_image(261,197) %>
              <%end%>
              <div class="card-body">
                <h4 class="card-title"><%= user.name %></h4>
               </div>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>