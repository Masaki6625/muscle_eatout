<%if user_signed_in? %>
<div class="text-left mb-3 mt-4">
  ようこそ、
  <%= link_to edit_user_path(current_user.id) do %>
  <strong class="text-dark"><%= current_user.name%></strong>
  <%end%>
  さん！
  <%end%>
</div>

<div class="container mb-5">
  <div class="row">
    <h1 class="text-left border-bottom" style="font-family: 'Sacrament', cursive;">About me</h1>
      <p><%= image_tag user.get_profile_image(230,230) %></p>
      <table class= "table table-striped mt-5">
        <thead>
          <tr>
            <th>Name</th>
            <td><%= user.name %></td>
          </tr>
        </thead>
        <tbory>
          <tr>
            <th>Introduction</th>
            <td><%= user.user_introduction %></td>
          </tr>
          <tr>
            <th>Follor</th>
            <td>
              <%= link_to user.followings.count, followings_path(user_id: user.id) %>
            </td>
          </tr>
          <tr>
            <th>Follower</th>
            <td>
              <%= link_to user.followers.count, followers_path(user_id: user.id) %>
            </td>
          </tr>
          <% unless user == current_user %>
            <tr>
              <td>
                <% if current_user.following?(user) %>
                  <%= link_to "Unfollow", relationships_path(user_id: user.id),method: :delete, class: "btn btn-danger" %>
                <% else %>
                  <%= link_to "Follow", relationships_path(user_id: user.id), method: :post, class: "btn btn-primary" %>
                <% end %>
              </td>
              <td>
                <% if current_user != user && current_user.followings.include?(user) && user.followings.include?(current_user) %>
                  <%= link_to 'chat', chat_path(user.id), class: "ml-3 btn btn-primary" %>
                <% end %>
              </td>
            </tr>
          <% end %>
      </tbody>
    </table>
    <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block " do  %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
</div>