<h1>登録されているユーザー 一覧</h1>

<dvi>
  <table class="table">
    <tr>
      <th>イメージ</th>
      <th>名前</th>
      <th>投稿数</th>
      <th>コメント数</th>
      <th>削除</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
      <td>
        <%= link_to admin_user_path(user.id) do %>
        <%= user.name %>
        <%end%>
      </td>
      <td>
        <%= user.restaurants.count %>
      </td>
      <td><%= user.comments.count %></td>
      <td>
        <%#= link_to "削除する", admin_user_path(user), method: :delete, class: "btn btn-danger btn-md" %>
      </td>
      </tr>
    <%end%>
  </table>
</div>