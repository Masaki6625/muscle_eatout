<div class="container">
  <div class="row mt-3">
    <div class="col-sm-4 px-sm-0 offset-sm-1 mt-3">
        <h2>管理者ログイン</h2>
      </div>
    </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <div class="col-sm-2 px-sm-0 offset-sm-1 my-3">
            <%= f.label "メールアドレス" %>
          </div>
          <div class="col-sm-3 px-sm-0 my-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>
        
          <div class="row">
            <div class="col-sm-2 px-sm-0 offset-sm-1">
              <%= f.label "パスワード" %>
            </div>
            <div class="col-sm-3 px-sm-0">
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        </div>
    <div class="row">
      <div class="col-sm-2 px-sm-0 offset-sm-1 mt-4 mb-5">
        <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
      </div>
    </div>
      <% end %>
      </div>